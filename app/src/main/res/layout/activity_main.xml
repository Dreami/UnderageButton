<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maple.underagebutton.MainActivity">

    <Button
        android:background="#ccccff"
        android:id="@+id/fake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:text="Picame"/>


    <Button
        android:id="@+id/cop"
        android:background="#ffe6ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="97dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/underage"
        android:layout_alignStart="@+id/underage"
        android:text="Picame a mi" />

    <Button
        android:id="@+id/underage"
        android:background="#ffff33"
        android:text="No, a mi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fake"
        android:layout_alignStart="@+id/fake"
        android:layout_below="@+id/fake"
        android:layout_marginTop="100dp"/>
    <ImageView
        android:visibility="invisible"
        android:elevation="2dp"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/policecar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="" />
</RelativeLayout>
</layout>